{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
		"noImplicitAny": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"],
		"exclude": [
			"**/dist/**",
			"**/node_modules/**"
		]
  }
}
